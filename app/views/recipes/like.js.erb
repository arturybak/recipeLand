//Run the function if ajax request succesful
$('.liked-btn').on('ajax:success', function(){
  $(this).closest('.liked-btn').html('Disliked :( <i class="glyphicon glyphicon-heart"></i> <%= @recipe.get_likes.size %>');
});

$('.like-btn').on('ajax:success', function(){
  $(this).closest('.like-btn').html('Hearted! <i class="glyphicon glyphicon-heart"></i> <%= @recipe.get_likes.size %>');
});
