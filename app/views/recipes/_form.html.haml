= simple_form_for @recipe, html: { multipart: true } do |form|
	- if @recipe.errors.any?
		#error_explanation
			%h2
				= pluralize(recipe.errors.count, "error")
				Prohibited this recipe from being saved:
			%ul
				- @recipe.errors.full_messages.each do |message|
					%li= message
	.panel-body
		= form.input :title, input_html: { class: 'form-control' }
		= form.input :description, input_html: { class: 'form-control' }
		= form.input :image, input_html: { class: 'form-control' }
		.row
			.col-md-6
			%h3 Ingredients
			#ingredients
				= form.simple_fields_for :ingredients do |ingredient|
					= render 'ingredient_fields', form: ingredient
				.links
					= link_to_add_association 'Add Ingredient', form, :ingredients
			.col-md-6
			%h3 Directions
			#directions
				= form.simple_fields_for :directions do |direction|
					= render 'direction_fields', form: direction
				.links
					= link_to_add_association 'Add Direction', form, :directions
	= form.button :submit, class: "btn btn-primary"
